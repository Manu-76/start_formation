{% block title %}
    User index
{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>
            Liste des administrateurs
        </h1>
{# Une fois le controller new fait, je modifie ma table #}
        <table class="table">
            <thead>
                <tr>
                    {# <th>
                        Id
                    </th> #}
                    <th>
                        Email
                    </th>
                    {# <th>
                        Roles
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        IsVerified
                    </th> #}
                    <th>
                        Prenom
                    </th>
                    <th>
                        Nom
                    </th>
                    <th>
                        actions
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        {# <td>
                            {{ user.id }}
